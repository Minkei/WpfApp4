<UserControl x:Class="WpfApp4.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp4.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="1360">
    
    <PasswordBox x:Name="txPassword" FontSize="13"
             FontWeight="Medium" 
             FontFamily="Montserrat" 
             Foreground="White"
             CaretBrush="LightGray"
             BorderBrush="DarkGray"
             BorderThickness="0,0,0,1"
             VerticalAlignment="Center"
             VerticalContentAlignment="Center"
             Padding="20,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/WpfApp4;component/Images/key-icon.png"
                        Stretch="None" AlignmentX="Left"
                        AlignmentY="Center"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
